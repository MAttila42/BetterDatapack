{
  "name": "better-datapack",
  "publisher": "ExAtom",
  "displayName": "Better Datapack",
  "description": "Adds a few tweaks to how Minecraft Datapacks are constructed to make it easier to code.",
  "icon": "icon.png",
  "version": "1.5.0-dev-4",
  "repository": {
    "type": "git",
    "url": "https://github.com/ExAtom/BetterDatapack.git"
  },
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mcfunction",
        "extensions": [
          ".mcfunction"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mcfunction",
        "scopeName": "source.mcfunction",
        "path": "./mcfunction.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "better-datapack.convert",
        "title": "Convert into traditional Datapack",
        "category": "Better Datapack",
        "icon": {
          "light": "debug-start-light.svg",
          "dark": "debug-start-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .mcfunction",
          "command": "better-datapack.convert",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "fs-extra": "^9.1.0",
    "line-reader": "^0.4.0",
    "mkdirp": "^1.0.4",
    "n-readlines": "^1.0.1",
    "path": "^0.12.7",
    "rimraf": "^3.0.2"
  }
}
